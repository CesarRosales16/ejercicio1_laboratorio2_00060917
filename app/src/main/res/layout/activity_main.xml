<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_marginTop="@dimen/start_margin"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:hint="@string/string_username"
        android:padding="@dimen/standard_padding" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:hint="@string/string_password"
        android:padding="@dimen/standard_padding"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:text="@string/string_click_button"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/default_margin_bottom"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:background="@color/button_green"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_show"
        android:gravity="center" />

</LinearLayout>